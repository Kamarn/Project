<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Product operations</title>
</head>
<body>
    
    {{> header }}
    <center>
        <div class="btn-group btn-group-justified btn-group-lg">
            <a href="/product/crud" class="btn btn-primary">Product CRUD</a>
            <a href="/product/addproduct" class="btn btn-primary">Add product</a>
            <a href="/product/addproductexcel" class="btn btn-primary">Add product from Excel file</a>
        </div>
    </center>

    {{#if addproduct}}
        <form action="/manager/addnewproduct" style="text-align:center" method="post">
            <div class="mb-3 mt-3">
                <label for="productName" class="form-label">Product name</label>
                <input type="productName" id="productName"name="productName">
            </div>

            <div class="mb-3">
                <label for="productPrice" class="form-label">Price</label>
                <input type="productPrice" id="productPrice"name="productPrice">
            </div>

            <div class="mb-3">
                <label for="productQuantity" class="form-label">Stock quantity</label>
                <input type="productQuantity" id="productQuantity"name="productQuantity">
            </div>

            <div class="mb-3">
                <label for="productImage">Image</label>
                <input type="file" id="productImage" name="productImage" accept="image/*">
            </div>

            <button type="submit" class="btn btn-primary">Add</button>
        </form>
    {{/if}}

    {{#if addproductexcel}}
        <center>
            <form ref='uploadForm' id='uploadForm' action='/manager/addnewproductexcel' method='post' encType="multipart/form-data">
                <input type="file" name="sampleFile" />
                <input type='submit' value='Upload!' />
            </form>
        </center>
        
    {{/if}}

    {{#if crud}}
        <div class="container mt-3">
            <h2>All products</h2>       
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Product name</th>
                        <th>Price</th>
                        <th>Stock quantity</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each products}}
                        <tr>
                            <td>{{this.productName}}</td>
                            <td>{{this.productPrice}}</td>
                            <td>{{this.productQuantity}}</td>
                            <td class="text-end">
                                <a href="/product/delete/{{this.productID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Delete product</a>
                                <a href="/product/displaySelected/{{this.productID}}" type="button" class="btn btn-light btn-small"><i class="bi bi-person-x"></i> Update</a>
                            </td>
                        </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    {{/if}}

    {{#if order}}
        <div class="container mt-3">
            <h2>Orders</h2>       
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>User ID</th>
                        <th>Product ID</th>
                        <th>Product Name</th>
                        <th>Price</th>
                        <th>Stock quantity</th>
                    </tr>
                </thead>

                <tbody>
                    {{#each orders}}
                        <tr>
                            <td>{{this.userID}}</td>
                            <td>{{this.productID}}</td>
                            <td>{{this.productName}}</td>
                            <td>{{this.productPrice}}</td>
                            <td>{{this.productQuantity}}</td>
                        </tr>
                    {{/each}}
                </tbody>

            </table>
        </div>
    {{else}}
        <center>
            <h2 >No orders found</h2> 
        </center>  
    {{/if}}

    {{#if messageError}}
        <h4 class="alert alert-danger mt-4">{{messageError}}</h4>
    {{/if}}

    {{#if messageSuccess}}
        <h4 class="alert alert-success mt-4">{{messageSuccess}}</h4>
    {{/if}}
</body>
</html>