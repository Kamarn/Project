<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet">
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js"></script>
    <title>Worker</title>
</head>
<body>
    
    {{> header }}

    {{#if ans}}

    {{else}}
        <center>
            <div class="card" style="width:400px">
                <img class="card-img-top" src="worker_img.png" alt="Card image" style="width:100%">
                <div class="card-body">
                    <h4 class="card-title">Hello {{user.username}}</h4>
                    <a href="/worker/display" class="btn btn-primary">Registered users</a>
                    <button onclick="location.href='/meet/meet'" class="btn btn-primary">Join meeting</button>
                </div>
            </div>
        </center>
    {{/if}}


    {{#if ans}}

        <div class="container mt-3">
            <h2>Workers and customers</h2>       
            <table class="table table-striped">
                <thead>
                    <tr>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Type</th>
                    </tr>
                </thead>

                <tbody>
                    
                    {{#each yonetim}}
                        <tr>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.usertype}}</td>
                            <td class="text-end">
                                <a href="" type="button" class="btn btn-light btn-small" hidden><i class="bi bi-pencil"></i></a>
                            </td>
                        </tr>
                    {{/each}}

                    {{#each customer}}
                        <tr>
                            <td>{{this.username}}</td>
                            <td>{{this.email}}</td>
                            <td>{{this.usertype}}</td>
                            <td class="text-end">
                                <a href="/worker/displaySelected/{{this.email}}" type="button" class="btn btn-light btn-small"><i class="bi bi-pencil"></i> Update informations</a>
                            </td>
                        </tr>
                    {{/each}}

                </tbody>

            </table>
        </div>
    {{/if}}

</body>
</html>